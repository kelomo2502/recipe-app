 <h2>RECIPE LIST</h2>

<section class="d-flex flex-column align-items-center recipe-bg ">
  <h1 class="text-center mb-2 pt-5">Recipes</h1>

  <div class="d-flex flex-column link px-5">
    <% if @recipes.empty? %>

      <h2 class="text-center">The list is empty.</h2>
    <% else %>
        <% @recipes.each do |recipe|  %>
        <%= render('card', recipe:) %>
      <% end %>
    <% end %>
  </div>
    <div class="recipe-name with-border px-5 mb-5"> 
        <%= link_to("Add New Recipe", new_recipe_path) %>
    </div>
</section>
