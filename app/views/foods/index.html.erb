
<div class=" m-3 d-flex justify-content-between align-items-center w-75 food-header" >
<h1>Foods</h1>

 <%= link_to 'Add Food',new_food_path, class: "button" %> 

</div>


<table  class="table table-bordered m-5 w-75 food-table">
<thead>
<tr>
<th scope="col">Food </th>
<th>Measurement unit </th>
<th>Unit price </th>
<th>Actions </th>
</tr>
</thead>
<tbody>
    <% @foods.each do |food|%>
<tr>
            <td> <%= food.name%></td>
            <td> <%= food.measurement_unit%></td>
            <td> $ <%= food.price%></td>
            <td><%= button_to 'delete', food_path(food.id), method: :delete, class:"btn btn-warning"%></td>
   </tr>
    <%end%>
</tbody>
 </table>